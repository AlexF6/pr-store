<p style="color: green"><%= notice %></p>

<div class="flex max-w-100 mx-auto justify-center space-y-6 text-gray-400 py-20 lg:py-32">
  <div class="space-y-6">
    <%= render @product %>
    <div class="flex justify-between gap-6">
      <%= link_to "Edit this product", edit_product_path(@product), class: "text-center border rounded-xl p-2 px-6"  %>
      <%= button_to "Destroy this product", @product, method: :delete, class: "border rounded-xl p-2 px-6" %>
    </div>
    <%= link_to "Back to products", products_path, class: "flex justify-center text-center border rounded-xl p-2 px-6 w-full"  %>
  </div>
  <%= form_with url: cart_items_path, method: :post, local: true do |f| %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= number_field_tag :quantity, 1, min: 1, class: "w-16" %>
    <%= f.submit "Agregar al carrito", class: "btn" %>
  <% end %>
</div>

