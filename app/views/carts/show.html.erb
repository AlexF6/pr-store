<h1>Tu carrito</h1>

<% if @cart.cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Producto</th><th>Precio</th><th>Cantidad</th><th>Subtotal</th><th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency(item.unit_price) %></td>
          <td>
            <%= form_with model: item, url: cart_item_path(item), method: :put, local: true do |f| %>
              <%= f.number_field :quantity, value: item.quantity, min: 1, class: "w-16" %>
              <%= f.submit "Actualizar" %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.subtotal) %></td>
          <td>
            <%= button_to "Eliminar", cart_item_path(item), method: :delete,
                  data: { confirm: "¿Eliminar este producto?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3" class="text-right">Total:</th>
        <th><%= number_to_currency(@cart.total) %></th>
        <th></th>
      </tr>
    </tfoot>
  </table>

  <%= link_to "Checkout", "#", class: "btn-primary" %>
<% else %>
  <p>Tu carrito está vacío.</p>
  <%= link_to "Ver productos", products_path %>
<% end %>
