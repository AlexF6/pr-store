<header class=" sticky top-0 z-50 text-xl text-gray-400 font-semibold">
  <div class="container mx-auto px-4 py-2">
    
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span><%= link_to "Elysium", root_path, class: "text-2xl font-bold bg-gradient-to-tr from-pink-400 to-violet-600 bg-clip-text text-transparent" %></span>

      </div>
      <div>
        <span><%= link_to "Products", products_path %></span>
      </div>

      <%= link_to cart_path, class: "relative inline-flex items-center gap-2 text-gray-300" do %>
        <%= image_tag "shopping-bag.svg", class: "size-5" %>
        <span>Cart</span>
        <% count = current_cart.cart_items.sum(:quantity) rescue 0 %>
        <% if count.positive? %>
          <span class="absolute -top-1 -right-6 rounded-full text-xs px-1.5 py-0.5 bg-pink-700 text-white">
            <%= count %>
          </span>
        <% end %>
      <% end %>

      <%#  <div>
      <%#    Contact
      <%#  </div>
      <%# <div> %>
        <%# <span> %>
          <%#<%= link_to "Usuarios", users_path %>
        <%# </span> %>
      <%# </div> %>
      
    <div>
      <% if authenticated? %>
        <%= button_to "Logout", session_path, method: :delete,
              class: "p-1.5 px-4 rounded-lg bg-gradient-to-r from-purple-600 to-fuchsia-700 hover:from-purple-900 hover:to-fuchsia-800 border-0" %>
      <% else %>
        <%= link_to "Login", login_path,
              class: "p-1.5 px-4 rounded-lg bg-gradient-to-r from-purple-600 to-fuchsia-700 hover:from-purple-900 hover:to-fuchsia-800 border-0" %>
      <% end %>
    </div>
  </div>
</header>